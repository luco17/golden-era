---
import Layout from "../layouts/Layout.astro";
import gera from "../assets/geraOpt.svg";
import Workout from "../components/Workout.astro";
import CopiedToast from "../components/CopiedToast.astro";
import WorkoutIndex from "../components/WorkoutIndex.astro";
import TopBar from "../components/TopBar.astro";
import LeftCol from "../assets/collageLeft.png";
import RightCol from "../assets/collageRight.png";
---

<Layout title="Golden Era Workouts">
  <nav class="container mx-auto px-1 sm:px-6 lg:px-8 py-4">
    <TopBar />
  </nav>
  <main
    class="container mx-auto px-1 sm:px-6 lg:px-8 py-4"
    x-data="{ showToast: false }"
  >
    <div class="mx-auto max-w-3xl">
      <img
        src={gera.src}
        width={gera.width}
        height={gera.height}
        alt="Golden era image"
        class="animate-fadeIn opacity-0"
      />
    </div>
    <div
      class="mx-auto flex flex-nowrap justify-center my-12 md:my-16 md:-space-x-6 xl:-space-x-12 max-w-4xl"
    >
      <img
        src={LeftCol.src}
        alt="collage of bodybuilding images"
        class="hidden md:block w-[550px] xl:w-[650px] animate-fadeFromLeft -translate-x-20 opacity-0"
      />
      <div class="sm:flex-shrink-0 md:w-4/5 lg:w-3/5 w-full z-10">
        <Workout />
      </div>
      <img
        src={RightCol.src}
        alt="collage of bodybuilding images"
        class="hidden md:block w-[500px] xl:w-[600px] animate-fadeFromRight translate-x-20 opacity-0"
      />
    </div>
    <CopiedToast />
    <WorkoutIndex />
  </main>
</Layout>

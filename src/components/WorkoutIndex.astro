<div
  class="relative z-10"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  x-show="showWorkoutIndex"
  x-cloak
>
  <!-- Background backdrop -->
  <div
    class="fixed inset-0 bg-gray-800 bg-opacity-20 backdrop-blur-sm transition-opacity"
    x-show="showWorkoutIndex"
    x-transition:enter="ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
  >
  </div>

  <!-- Modal panel -->
  <div class="fixed inset-x-0 top-0 z-10 max-w-screen-2xl mx-auto">
    <div
      class="relative space-y-2 w-full max-h-[85vh] overflow-y-auto rounded-b-xl bg-[#C85325] py-4 px-1 md:p-4 transition-all"
      x-show="showWorkoutIndex"
      x-on:click.away="showWorkoutIndex = false"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 -translate-y-full"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-full"
      x-cloak
    >
      <div class="flex items-center justify-between">
        <h1
          class="text-4xl md:text-6xl xl:text-7xl font-title pl-1 text-[#EFE5D4]"
        >
          Index
        </h1>
        <div class="flex h-8 items-center">
          <button
            type="button"
            class="relative rounded-full bg-white/20 text-[#EFE5D4] hover:text-gray-500 focus:ring-2 focus:ring-indigo-500"
            @click="showWorkoutIndex = false"
          >
            <span class="absolute -inset-2.5"></span>
            <span class="sr-only">Close panel</span>
            <svg
              class="h-7 w-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
      <!-- Loop through workout titles -->
      <div class="flex flex-row flex-wrap space-x-2">
        <template
          x-for="(workout, index) in $store.workoutStore.workouts"
          :key="index"
        >
          <button
            type="button"
            class="rounded border-2 font-sans border-yellow-400 px-3 py-2 text-sm sm:text-lg text-[#FAF8F2] font-medium shadow-sm hover:bg-indigo-500 mb-2"
            x-on:click="showWorkoutIndex = false; $store.workoutStore.activeWorkout = index"
            x-text="workout.title"></button>
        </template>
      </div>
    </div>
  </div>
</div>

<style>
  [x-cloak] {
    display: none;
  }
</style>
